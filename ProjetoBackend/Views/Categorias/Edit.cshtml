@model ProjetoBackend.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<h1 class="fw-lighter">Editar Categoria</h1>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CategoriaId" />
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-4">
            <a asp-action="Index" class="btn btn-danger d-flex align-items-baseline align-content-center px-5 mt-3 w-100 justify-content-center py-3">Cancelar</a>
        </div>

        <div class="col-12 col-md-4">
        </div>

        <div class="col-12 col-md-4">
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-info d-flex align-items-baseline align-content-center px-5 mt-3 w-100 justify-content-center py-3" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
