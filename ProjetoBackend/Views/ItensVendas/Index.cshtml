@model IEnumerable<ProjetoBackend.Models.ItemVenda>

@{
    ViewData["Title"] = "Produtos das Vendas";
    var idVendaAtual = ViewData["idVendaAtual"];
}

<h1 class="fw-lighter">Produtos das Vendas</h1>

<div class="row">
    <div class="col-12 col-md-4">
        <p>
            <a asp-action="Create" asp-route-id="@idVendaAtual" class="btn btn-lg btn-secondary">Adicionar</a>
        </p>
    </div>

    <div class="col-12 col-md-4"></div>

    <div class="col-12 col-md-4">
        <form asp-action="Search" method="get">
            <input class="form-control-sm border-primary" type="text" name="nome" placeholder="Buscar produtos..." />
            <button type="submit" class="btn btn-lg btn-secondary"><ion-icon name="search"></ion-icon>Buscar</button>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered border-info">
        <thead>
            <tr>
                <th class="bg-primary text-light">
                    @Html.DisplayNameFor(model => model.Venda.NotaFiscal)
                </th>
                <th class="bg-primary text-light">
                    @Html.DisplayNameFor(model => model.Produto.Nome)
                </th>
                <th class="bg-primary text-light">
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th class="bg-primary text-light">
                    @Html.DisplayNameFor(model => model.ValorUnitario)
                </th>
                <th class="bg-primary text-light">
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </th>
                <th class="bg-primary"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venda.NotaFiscal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorUnitario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ItemVendaId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.ItemVendaId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>