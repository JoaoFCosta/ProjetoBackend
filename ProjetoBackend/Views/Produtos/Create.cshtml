@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h1>Cadastrar Produto</h1>

<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-12 col-md-3">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input type="number" step="0.01" asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="form-group">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md-3">
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div>
                <a asp-action="Index" class="btn btn-danger d-flex align-items-baseline align-content-center px-5 mt-3 w-100 justify-content-center py-3">Voltar</a>
            </div>
        </div>

        <div class="col-12 col-md-4">
        </div>

        <div class="col-12 col-md-4">
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-info d-flex align-items-baseline align-content-center px-5 mt-3 w-100 justify-content-center py-3" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
