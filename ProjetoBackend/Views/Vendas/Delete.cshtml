@model ProjetoBackend.Models.Venda

@{
    ViewData["Title"] = "Deletar Venda";
}


<h3>Você tem certeza que deseja deletar está venda?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NotaFiscal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NotaFiscal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Celular)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VendaId" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-warning">Voltar</a>
    </form>
</div>
