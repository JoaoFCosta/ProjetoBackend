@model ProjetoBackend.Models.Venda

@{
    ViewData["Title"] = "Cadastrar Venda";
}

<h1>Cadastrar Venda</h1>

<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label">
                </label>
                <input asp-for="ValorTotal" readonly="readonly" value="0.00" class="form-control" />
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <input type="hidden" asp-for="NotaFiscal" class="form-control" />
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="form-group">
                    <input type="hidden" asp-for="DataVenda" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div>
                <a asp-action="Index" class="btn btn-danger d-flex align-items-baseline align-content-center px-5 mt-3 w-100 justify-content-center py-3">Voltar</a>
            </div>
        </div>

        <div class="col-12 col-md-4">
        </div>

        <div class="col-12 col-md-4">
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-info d-flex align-items-baseline align-content-center px-5 mt-3 w-100 justify-content-center py-3" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}
